<configuration>
	<appSettings>
        <!-- Enviroment variables accesibles desde la aplicación node.js (process.env.<key>) -->
   		<!-- <add key="virtualDirPath" value="" /> -->
	</appSettings>
  		<system.webServer>
		<!-- Indica que todos los archivos .js son aplicaciones node.js y tienen que ser tratadas por el módule de iisnode -->
		<handlers>
			<add name="iisnode" path="*.js" verb="*" modules="iisnode" />
		</handlers>
		<!-- Reedirige las peticiones que casen con la URL api/* para que sean tartadas por el archivo app_IIS.js -->
		<rewrite>
			<rules>
				<rule name="api_IIS">
					<match url="api/*"/>
					<action type="Rewrite" url="app_IIS.js" />
				</rule>
			</rules>
		</rewrite>
		<security>
			<!-- Exluye los directorios/archivos exclusivos de node.js para evitar que sean servidos por IIS -->
    		<requestFiltering>
    		  <hiddenSegments>
    		  	<add segment="node_modules"/>
				<add segment="app.js"/>
    		  </hiddenSegments>
    		</requestFiltering>
  		</security>  
  	</system.webServer>
</configuration>
